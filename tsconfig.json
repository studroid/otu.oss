{
    "compilerOptions": {
        "target": "es2015",
        "downlevelIteration": true,
        "lib": ["dom", "dom.iterable", "esnext", "webworker"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*", "./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "components/RedactorArticle.css",
        "supabase/functions/embedding/index.js",
        "app/global-error.jsx",
        "public/worker/shared-syn.js",
        "public/lib/redactorXAdaptor/Redactor.jsx",
        "app/api/usage/queue/receive/route.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", "supabase/functions", "public/sw.js"],
    "types": ["@uploadcare/blocks/types/jsx"]
}
